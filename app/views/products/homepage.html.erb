<div class="product-list">
  <% @products.each do |product| %>
    <div class="product-box col-md-4">
      <div class="panel panel-default">
        <div class="panel-heading">
          <%= link_to product.name, product, class: 'product-name panel-title' %>
        </div>
        <div class="panel-body">
          <% if product.image.exists? %>
            <%= image_tag product.image.url(:thumb), class: 'thumb img-circle pull-right' %>
          <% else %>
            <img src="data:image/png;base64," class="img-circle pull-right" alt="140x140" style="width: 140px; height: 140px;">
          <% end %>
          <div class="product-description">
            <%= product.description %>
          </div>
          <div class="clearfix"></div>
          <div class='cart-button'>
            <%= form_for current_cart do |f| %>
              <%= f.hidden_field :product_id, value: product.id %>
              <%= f.submit 'Add to Cart', class: 'btn btn-default' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>